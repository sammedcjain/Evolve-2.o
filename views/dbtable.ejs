<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Db Table</title>
    <style>
    @import url("https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css");

/* Body Styles */
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f8f9fa;
}

/* Header Styles */
h1 {
  color: #007bff;
  text-align: center;
  margin-top: 50px;
}

h2 {
  font-size: 24px;
  text-align: center;
  margin-top: 20px;
  margin-bottom: 30px;
}

/* Table Styles */
table {
  margin: 0 auto;
  border-collapse: collapse;
  width: 80%;
  max-width: 800px;
  background-color: #fff;
  box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.1);
}

table th,
table td {
  padding: 12px 15px;
  text-align: center;
  vertical-align: middle;
  border: 1px solid #ddd; /* add border properties */
}

table th {
  font-size: 16px;
  font-weight: bold;
  background-color: #007bff;
  color: #fff;
  text-transform: uppercase;
}

table td {
  font-size: 14px;
  color: #333;
}

/* Table Hover Styles */
table tbody tr:hover {
  background-color: #f5f5f5;
}

/* Bootstrap Styles */
.btn-primary {
  background-color: #007bff;
  border-color: #007bff;
}

.btn-primary:hover {
  background-color: #0062cc;
  border-color: #005cbf;
}

/* Media Queries */
@media only screen and (max-width: 768px) {
  h1 {
    font-size: 30px;
    margin-top: 30px;
  }

  h2 {
    font-size: 20px;
    margin-top: 15px;
    margin-bottom: 20px;
  }

  table {
    width: 100%;
  }

  table th,
  table td {
    padding: 8px;
    font-size: 12px;
  }
}
    </style>
  </head>
  <body>
    <h1>Evolve 2.0</h1>
    <h2>EV vehicles as per your requirement :</h2>
    <br>
    <table>
      <tr>
        <th>Company</th>
        <th>Vehicle</th>
        <th>Price</th>
        <th>Min Range in kms</th>
        <th>Speed</th>
      </tr>
    <% evdb.forEach(function(item){  %>

        <tr>
          <td><%= item.company %></td>
          <td><%= item.vehicle %></td>
          <td><%= item.price %></td>
          <td><%= item.range %></td>
          <td><%= item.speed %></td>
        </tr>
    <%  })  %>
    </table>
  </body>
  </html>
